@using YprojectUserService.Razor.Models

<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .email-container {
            font-family: 'Montserrat', Arial, sans-serif;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f0fafa;
            border: 1px solid #ddd;
            border-radius: 8px;
            text-align: center;
        }
        .email-header {
            font-size: 24px;
            font-weight: 700;
            color: #333;
            margin-bottom: 20px;
        }
        .email-subtitle {
            font-size: 18px;
            font-weight: 500;
            color: #555;
            margin-bottom: 15px;
        }
        .email-code {
            font-size: 32px;
            font-weight: 800;
            color: #121C4C;
            margin: 20px 0;
        }
        .email-body {
            font-size: 16px;
            font-weight: 400;
            color: #555;
            line-height: 1.6;
            margin-bottom: 20px;
        }
        .email-button a {
            display: inline-block;
            padding: 12px 64px;
            background-color: #01A6AF;
            color: #FEFEFF;
            text-decoration: none;
            font-weight: 600;
            border-radius: 10px;
            font-family: 'Montserrat', Arial, sans-serif;
        }
        .email-footer {
            font-size: 14px;
            color: #777;
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
<div class="email-container">
    <div class="email-header">@Model.Title</div>
    <div class="email-subtitle">@Model.Subtitle</div>
    <div class="email-code">@Model.Code</div>
    <div class="email-button">
        @if (Model.EmailButton != null)
        {
        <a href="@Model.EmailButton.Link">@Model.EmailButton.Text</a>
        }
    </div>
    <div class="email-body">@Model.Body</div>

    <div class="email-footer">
        See our <a href="@Model.TermsOfUseUrl" target="_blank">Terms of Use</a> and
        <a href="@Model.PrivacyPolicyUrl" target="_blank">Privacy Policy</a>.<br/>
        If this email is unfamiliar, please contact @Model.SupportEmail<br/>
        Best regards, The Y Project team!<br/>
        &copy; @DateTime.Now.Year Y-Project
    </div>
</div>
</body>
</html>

@code
{
    [Parameter] public EmailModel Model { get; set; }
}
